{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "eslint",
      "problemMatcher": ["$eslint-stylish"],
      "label": "eslint: lint whole folder",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      }
    },

    {
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": ["$ts-checker-webpack", "$ts-checker-eslint-webpack"]
    },
    {
      "type": "npm",
      "script": "lint",
      "group": "build",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "type": "npm",
      "script": "local",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": [
        "$ts-checker-webpack-watch",
        "$ts-checker-eslint-webpack-watch"
      ]
    }
  ]
}
